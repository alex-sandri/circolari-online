rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /circolari/{circolareId} {
      allow read, create: if true;

      allow update, delete: if false;

      match /answers/{answerId} {
        allow read, create: if true;

        allow update, delete: if false;
      }
    }
  }
}